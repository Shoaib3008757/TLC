<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_invoice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ranglerz.tlc.tlc.com.ranglerz.tlc.tlc.Invoice.Invoice"
    tools:showIn="@layout/activity_invoice"
    android:orientation="horizontal">



    <TableRow android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tablerowone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T&amp;LC"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/tlcinvoice"
            android:layout_weight="10"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="20sp"
            android:id="@+id/dateinvoicea"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03-02-2016"
            android:textSize="20sp"
            android:id="@+id/dateinvoice"
            android:layout_weight="0.5"
            />


    </TableRow>

    <TableRow android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/tablerowtwo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Behria Twon \nLahore"
            android:textSize="20sp"
            android:id="@+id/addressinvoice"
            android:layout_marginTop="10dp"
            android:layout_weight="10"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoice#:"
            android:textSize="20sp"
            android:id="@+id/invoice"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:id="@+id/invoicenumber"
            android:layout_weight="0.5"
            android:layout_marginTop="7dp"
            />


    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tablerowthree">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_weight="10"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matter:"
            android:textSize="20sp"
            android:id="@+id/matterinvoice"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case 69696"
            android:textSize="20sp"
            android:id="@+id/caseinvoice"
            android:layout_weight="0.5"
            />


    </TableRow>


    <TableRow android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tablerowfour"
        android:gravity="center"        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Invoice for Professional Service"
            android:id="@+id/invoiceforpro"
            android:padding="20dp"
            />

    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tablerowfive"
        >

        <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Description"
        android:textSize="20sp"
            android:layout_weight="1"
        />


        <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Sample Text"
        android:textSize="20sp"
            android:layout_weight="1"
        />

    </TableRow>

    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/tablerosix"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Amount"
            android:textSize="20sp"
            android:layout_weight="1"/>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="$40.00"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </TableRow>


    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tableroweight">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone#"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000000"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="20sp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S40.00"
            android:textSize="20sp"
            android:layout_weight="1"
            />

    </LinearLayout>


    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/afasdf">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fax#"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000000"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment/Credits"
            android:textSize="20sp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S0.00"
            android:textSize="20sp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/fafasf">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000000"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance Due"
            android:textSize="20sp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S40.00"
            android:textSize="20sp"
            android:layout_weight="1"
            />

    </LinearLayout>


</TableLayout>
