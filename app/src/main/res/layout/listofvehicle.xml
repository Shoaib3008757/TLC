<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listofvehicletableid">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listofvehicletableidlist"
                android:textSize="15sp"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/platenumbername"
                android:textSize="15sp"
                android:text="Plate No:"
                android:textStyle="bold"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/platelist"
                android:textSize="15sp"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vinnumbername"
        android:textSize="15sp"
        android:text="VI No:"
        android:textStyle="bold"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vinlist"
        android:textSize="15sp"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:layout_marginTop="5dp"

        />
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third"
            >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/policynumbername"
        android:textSize="15sp"
        android:text="Policy No:"
        android:textStyle="bold"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/policylist"
        android:textSize="15sp"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        />
</LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/delete"
                android:src="@drawable/delete"
                />



        </LinearLayout>



    </LinearLayout>





</RelativeLayout>