<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ranglerz.tlc.tlc.com.ranglerz.tlc.tlc.ReportAccident.ReportAccidentForm"
    tools:showIn="@layout/activity_report_accident_form"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reportaccidenttext"
        android:layout_alignParentTop="true"
        android:text="Report Accident"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>


    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Select the following document from your phone."-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:id="@+id/selectthefollowing"-->
<!--android:layout_below="@+id/reportaccidenttext"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:textSize="20sp"-->
        <!--android:layout_marginTop="10dp"/>-->

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/takepictureAccidentReport"
        android:id="@+id/takePictureReportAccidentForm"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reportaccidenttext"
        android:background="@drawable/radious"
        android:textColor="@color/buttoncolor"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/takePictureReportAccidentFormImageView"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/takePictureReportAccidentForm"
        android:layout_alignRight="@+id/reportaccidenttext"
        android:layout_alignEnd="@+id/reportaccidenttext"
        android:layout_marginBottom="10dp"
        />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/reportaccidentaddcomentWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takePictureReportAccidentFormImageView"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/reportaccidentaddcoment"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/takePictureReportAccidentFormImageView"
            android:hint="@string/addcomment"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="1"
            android:gravity="top|left"
            android:maxLines="10"
            android:textSize="20dp"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp"
            />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submitbtn"
        android:id="@+id/submitReportAccidentForm"
        android:layout_below="@+id/reportaccidentaddcomentWrapper"
        android:background="@drawable/radious"
        android:textColor="@color/buttoncolor"
        android:layout_marginTop="30dp"
        />




</RelativeLayout>
