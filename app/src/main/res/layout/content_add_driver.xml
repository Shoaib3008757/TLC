        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:id="@+id/endorsmentformImageView"-->
        <!--android:layout_below="@+id/endorsmentform"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:src="@drawable/no_preview"/>-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/adddriveraddcomentWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tlclicenceadddriverImageView"
        android:layout_centerHorizontal="true">


    <EditText
        android:id="@+id/adddriveraddcoment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tlclicenceadddriverImageView"
        android:hint="@string/addcomment"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="1"
        android:gravity="top|left"
        android:maxLines="10"
        android:textSize="20dp"
        android:scrollbars="vertical"
        />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submitbtn"
        android:id="@+id/submitadddriver"
        android:layout_below="@+id/adddriveraddcomentWrapper"
        android:background="@drawable/radious"
        android:textColor="@color/buttoncolor"
        android:layout_marginTop="30dp"

        />


</RelativeLayout>
    </ScrollView>
</RelativeLayout>
