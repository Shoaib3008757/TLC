<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_driver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ranglerz.tlc.tlc.com.ranglerz.tlc.tlc.Insurance.AddDriver"
    tools:showIn="@layout/activity_add_driver"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/adddriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addDriver"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/drivernameWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addDriver"
        android:layout_centerHorizontal="true">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addDriver"
        android:layout_centerHorizontal="true"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:id="@+id/drivername"
        android:hint="@string/driverName"
        android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/driverlicenseWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drivernameWrapper"
        android:layout_centerHorizontal="true">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drivername"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:maxLength="20"
        android:id="@+id/driverlicense"
        android:hint="@string/driverlicense"
        android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlclicenceWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driverlicenseWrapper"
        android:layout_centerHorizontal="true">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driverlicense"
        android:layout_centerHorizontal="true"
        android:id="@+id/tlclicence"
        android:inputType="text"
        android:maxLength="20"
        android:hint="@string/tlclicense"
        android:textSize="20dp"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/platanumWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tlclicenceWrapper"
        android:layout_centerHorizontal="true">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tlclicence"
        android:layout_centerHorizontal="true"
        android:id="@+id/platanum"
        android:hint="@string/platenum"
        android:maxLength="8"
        android:textSize="20dp"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/policynumberWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/platanumWrapper"
        android:layout_centerHorizontal="true">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/platanum"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:id="@+id/policynumber"
        android:hint="@string/policynumber"
        android:maxLength="20"
        android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/fleetnameWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/policynumberWrapper"
        android:layout_centerHorizontal="true">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/policynumber"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:id="@+id/fleetname"
        android:hint="@string/companyname"
        android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/startdrivingWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fleetnameWrapper"
        android:layout_centerHorizontal="true">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fleetname"
        android:layout_centerHorizontal="true"
        android:id="@+id/startdriving"
        android:focusable="false"
        android:hint="@string/whenyou"
        android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/numberofticketWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startdrivingWrapper"
        android:layout_centerHorizontal="true">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startdriving"
        android:layout_centerHorizontal="true"
        android:id="@+id/numberofticket"
        android:inputType="number"
        android:hint="@string/numberofticket"
        android:textSize="20dp"/>


    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/selectthefollowing"
        android:layout_centerHorizontal="true"
        android:id="@+id/selectthefollowing"
        android:layout_below="@+id/numberofticketWrapper"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/takepictureutilitybill"
        android:id="@+id/utilitybills"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/selectthefollowing"
        android:background="@drawable/radious"
        android:textColor="@color/buttoncolor"
        android:layout_marginTop="10dp"/>



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/utilitybillsImageView"
        android:layout_below="@+id/utilitybills"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/takepicturebaseletter"
        android:id="@+id/baseletter"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/utilitybillsImageView"
        android:background="@drawable/radious"
        android:textColor="@color/buttoncolor"
        android:layout_marginTop="32dp"/>



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/baseletterImageView"
        android:layout_below="@+id/baseletter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />



    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/driverlicense"
        android:id="@+id/driverlicenseadddriver"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/baseletterImageView"
        android:background="@drawable/radious"
        android:textColor="@color/buttoncolor"
        android:layout_marginTop="32dp"/>



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/driverlicenseadddriverImageView"
        android:layout_below="@+id/driverlicenseadddriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/tlclicense"
        android:id="@+id/tlclicenceadddriver"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/driverlicenseadddriverImageView"
        android:background="@drawable/radious"
        android:textColor="@color/buttoncolor"
        android:layout_marginTop="32dp"/>



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/tlclicenceadddriverImageView"
        android:layout_below="@+id/tlclicenceadddriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        />


    <!--<Button-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/takepictureendorsment"-->
        <!--android:id="@+id/endorsmentform"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_below="@+id/baseletterImageView"-->
        <!--android:background="@drawable/radious"-->
        <!--android:textColor="@color/buttoncolor"-->
