<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_vehicle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ranglerz.tlc.tlc.com.ranglerz.tlc.tlc.Insurance.AddVehicle"
    tools:showIn="@layout/activity_add_vehicle"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/addvehicle"
        android:id="@+id/addvehicleadd"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/platenumberWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addvehicleadd"
        android:layout_centerHorizontal="true">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/platenumber"
        android:layout_below="@+id/addvehicleadd"
        android:layout_centerHorizontal="true"
        android:hint="@string/platenum"
        android:inputType="text"
        android:maxLength="8"
        android:textSize="20dp"
        />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/vinnumberWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/platenumberWrapper"
        android:layout_centerHorizontal="true">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/vinnumber"
        android:layout_below="@+id/platenumber"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="@string/vinnumber"
        android:maxLength="20"
        android:textSize="20dp"
        />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/policyWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vinnumberWrapper"
        android:layout_centerHorizontal="true">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/policy"
        android:layout_below="@+id/vinnumber"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="@string/policynumber"
        android:maxLength="20"
        android:textSize="20dp"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/addvehicleaddcomentWrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/policyWrapper"
        android:layout_centerHorizontal="true">

    <EditText
        android:id="@+id/addvehicleaddcoment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/policy"
        android:hint="@string/addcomment"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="1"
        android:gravity="top|left"
        android:maxLines="10"
        android:textSize="20dp"
        android:scrollbars="vertical"
        />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submitbtn"
        android:id="@+id/submitAddVehcle"
        android:layout_below="@+id/addvehicleaddcomentWrapper"
        android:layout_centerHorizontal="true"
        android:background="@drawable/radious"
        android:layout_marginTop="30dp"
        android:textColor="@color/buttoncolor"
        />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
